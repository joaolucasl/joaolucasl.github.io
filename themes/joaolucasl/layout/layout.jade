doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    include _partial/head
  body(class=bodyclass)
    header.page-header
      block header
        h1.site-title
          a(href=config.root)= config.title
        p.site-slogan= config.subtitle
    section#content
      if page.thumbnail
        div.article-bg(style="background-image: url(#{page.thumbnail});")
          div.overlay-layer
      else  
        div.article-bg
          div.overlay-layer
      != body
    footer#page-footer
      include _partial/footer
